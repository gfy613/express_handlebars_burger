<div class = "container">

<div class = "panel panel-default col-md-5"></div>
  <h2>Burgers to Eat</h2>
  <ul>
    {{#each burgers}}
      {{#unless this.devour}}
      <li>
         {{ this.name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="true">
                <button type="submit" class="btn btn-warning btn-sm">Devour!</button>
              </form>
      </li>
      {{/unless}}
   {{/each}}
  </ul>
</div>

<div class = "col-md-1"></div>

<div class = "panel panel-default col-md-5">
  <h2>Burgers that have been devoured</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devour}}
        {{this.name}}
      {{/if}}
    {{/each}}
  </ul>

</div>
</div>


