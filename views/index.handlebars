<div class = "container">

  <div class = "panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
    <h2>Burgers to Eat</h2>
    </div>
    <ul>
      {{#each burgers}}
        {{#unless this.devour}}
        <li>
          {{this.id}}<span>.</span> {{this.name}}
            <form>
                  <input type="hidden" name="devour" value="true" >
                  <button type="submit" class="btn btn-warning btn-sm change-devour" data-id = {{this.id}} >Devour it!</button>
                </form>
        </li>
        {{/unless}}
    {{/each}}
    </ul>
  </div>

  <div class = "col-md-1"></div>

  <div class = "panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
    <h2>Burgers that have been devoured</h2>
    </div>
    <ul>
      {{#each burgers}}
        {{#if this.devour}}
        <li>
          {{this.id}}<span>.</span> {{this.name}}
        </li>
        {{/if}}
      {{/each}}
    </ul>

  </div>
</div>


